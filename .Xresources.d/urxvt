! urxvt config

! Default term options

! termbg and termfg defined in each theme
!
urxvt*background: termbg
urxvt*foreground: termfg

! Tewi Font
!
urxvt*font: xft:Tewi:size=9
urxvt.letterSpace: 0

! Yuki Font
!
!urxvt*font: xft:yuki:size=10
!urxvt.letterSpace: 1

! Source Code Pro
!
!urxvt*font: xft:Source Code Pro:size=8
!urxvt.letterSpace: -2

! Use firefox for internets
urxvt*perl-ext-common: default,matcher,selection-to-clipboard
urxvt*url-launcher:    firefox
urxvt*matcher.button:  3

urxvt*internalBorder: 20
urxvt*cursorBlink: 1

! Scrollbar
!
urxvt*scrollBar: off

! Clipboard enable
!
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:

